<Window x:Class="wpf_git.MetadataViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_git"
        mc:Ignorable="d"
        Title="MetadataViewer"
				UseLayoutRounding="True"
				d:DesignHeight="300" 
        d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<local:MetadataViewerControl Grid.Column="0" Grid.Row="0" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></local:MetadataViewerControl>
		<Button Grid.Column="0" Grid.Row="1" Height="25" Width="75" HorizontalAlignment="Right" Margin="4" Command="{Binding StartStopMetadataViewerCommand}">Start/Stop</Button>
	</Grid>
</Window>
