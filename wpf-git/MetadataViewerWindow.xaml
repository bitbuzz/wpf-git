<Window x:Class="wpf_git.MetadataViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_git"
        mc:Ignorable="d"
        Title="MetadataViewer"
				UseLayoutRounding="True"
				d:DesignHeight="300" 
        d:DesignWidth="300"
				Closing="Window_Closing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<local:MetadataViewerControl Grid.Column="0" Grid.Row="0" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></local:MetadataViewerControl>
		<StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Height="25" Width="75" HorizontalAlignment="Right" Margin="4,2,2,4" Command="{Binding StartStopMetadataViewerCommand}">Data</Button>
			<Button Height="25" Width="75" HorizontalAlignment="Right" Margin="2,2,4,4" Command="{Binding CloseMetadataViewerWindowCommand}">Close</Button>
		</StackPanel>
	</Grid>
</Window>
